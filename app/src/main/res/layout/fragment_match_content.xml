            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/MY_WHITE"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_sign_start"
            app:layout_constraintStart_toEndOf="@+id/iv_sign_start"
            app:layout_constraintTop_toTopOf="@+id/iv_sign_start"
            tools:text="Sunday, 23-04-2023" />

        <ImageView
            android:id="@+id/iv_sign_dot_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_dot_greed_svg"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sign_start_date"
            app:layout_constraintStart_toEndOf="@+id/tv_sign_start_date"
            app:layout_constraintTop_toTopOf="@+id/tv_sign_start_date" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_sign_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/MY_WHITE"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/iv_sign_dot_start"
            app:layout_constraintStart_toEndOf="@+id/iv_sign_dot_start"
            app:layout_constraintTop_toTopOf="@+id/iv_sign_dot_start"
