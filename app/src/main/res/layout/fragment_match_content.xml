<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MY_BLACK"
        android:paddingHorizontal="20dp"
        android:paddingVertical="24dp"
        tools:context=".bm_new.ui.match.detail.content.MatchContentFragment">

        <TextView
            android:id="@+id/tv_competition_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Competition date"
            android:textColor="@color/MY_WHITE"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_game_start"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_calendar_start_svg"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_competition_date" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_game_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/MY_WHITE"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/iv_game_start"
            app:layout_constraintStart_toEndOf="@+id/iv_game_start"
            app:layout_constraintTop_toTopOf="@+id/iv_game_start"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:text="Wednesday, 11-01-2023" />


        <ImageView
            android:id="@+id/iv_game_dot_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_dot_greed_svg"
            app:layout_constraintBottom_toBottomOf="@+id/tv_game_start_date"
            app:layout_constraintStart_toEndOf="@+id/tv_game_start_date"
            app:layout_constraintTop_toTopOf="@+id/tv_game_start_date" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_game_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/MY_WHITE"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv_game_start_date"
            app:layout_constraintStart_toEndOf="@+id/iv_game_dot_start"
            app:layout_constraintTop_toTopOf="@+id/tv_game_start_date"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:text="08:00" />

        <ImageView
            android:id="@+id/iv_game_end"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_calendar_end_svg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_game_start" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_game_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/MY_WHITE"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/iv_game_end"
            app:layout_constraintStart_toEndOf="@+id/iv_game_end"
            app:layout_constraintTop_toTopOf="@+id/iv_game_end"
