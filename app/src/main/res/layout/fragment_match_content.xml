            app:layout_constraintBottom_toBottomOf="@+id/tv_game_end_date"
            app:layout_constraintStart_toEndOf="@+id/tv_game_end_date"
            app:layout_constraintTop_toTopOf="@+id/tv_game_end_date" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_game_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/MY_WHITE"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv_game_end_date"
            app:layout_constraintStart_toEndOf="@+id/iv_game_dot_end"
            app:layout_constraintTop_toTopOf="@+id/tv_game_end_date"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:text="08:00" />

        <ImageView
