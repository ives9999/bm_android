<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/levelContainer"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/member_level"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/levelLeftContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="200"
        android:orientation="horizontal">

        <com.sportpassword.bm.Views.IconWithBGCircle
            android:id="@+id/pointIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="center_vertical"
            app:iconWithBGCircleFrameWidth="48"
            app:iconWithBGCircleIconWidth="24"
            app:iconWithBGCircleIcon="ic_point_svg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pointTextTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_16_bold_white"
                android:text="600點" />
            <TextView
                android:id="@+id/pointDescTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="@style/text_12_white99"
                android:text="會員點數" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@color/TEXT_WHITE33" />

    <LinearLayout
        android:id="@+id/levelRightContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="200"
        android:orientation="horizontal">

        <com.sportpassword.bm.Views.IconWithBGCircle
            android:id="@+id/subscriptionIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="center_vertical"
            app:iconWithBGCircleFrameWidth="48"
            app:iconWithBGCircleIconWidth="24"
            app:iconWithBGCircleIcon="ic_subscription_basic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subscriptionTextTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_16_bold_white"
                android:text="基本會員" />
            <TextView
                android:id="@+id/subscriptionDescTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="@style/text_12_white99"
                android:text="會員訂閱" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>