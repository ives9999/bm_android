<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/featuredContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.sportpassword.bm.Views.IconView2
            android:id="@+id/qrcodeIV2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            app:iconView2Icon="ic_qrcode_svg"
            />

        <ImageView
            android:id="@+id/avatarIV"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_noavatar_svg" />

        <com.sportpassword.bm.Views.IconView2
            android:id="@+id/logoutIV2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            app:iconView2Icon="ic_logout_svg"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/nameTV"
            style="@style/list_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ives" />
    </LinearLayout>

</LinearLayout>