<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgetPassword_layout"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sportpassword.bm.Controllers.ForgetPasswordVC"
    >

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/MY_GREEN">

        <include layout="@layout/top_view" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topView"
        android:background="@color/MY_BLACK"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <EditText
            android:id="@+id/forgetPasswordEmailTxt"
            style="@android:style/Widget.DeviceDefault.Light.EditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/search_linearlayout"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="請輸入註冊時的email"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:singleLine="false"
            android:textColor="@color/MY_GREEN"
            android:textColorHint="@color/grey"
            android:textSize="18sp"
             />

        <Button
            android:id="@+id/button"
            style="@style/submit_button"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:onClick="forgetPasswordSubmit"
            android:text="送出" />

    </LinearLayout>
    <include layout="@layout/mask" />

</RelativeLayout>
