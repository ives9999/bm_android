<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/teamTabContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/teamTabIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/team" />

        <TextView
            android:id="@+id/teamTabTitle"
            style="@style/list_text_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="球隊"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/MY_GREEN"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/courseTabContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/courseTabIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/course" />

        <TextView
            android:id="@+id/courseTabTitle"
            style="@style/list_text_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="課程" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/MY_GREEN"
            android:orientation="vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/memberTabContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/memberTabIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/member" />

        <TextView
            android:id="@+id/memberTabTitle"
            style="@style/list_text_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="會員" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/MY_GREEN"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/arenaTabContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arenaTabIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/arena" />

        <TextView
            android:id="@+id/areanTabTitle"
            style="@style/list_text_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="球館" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/MY_GREEN"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moreTabContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/moreTabIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/more" />

        <TextView
            android:id="@+id/moreTabTitle"
            style="@style/list_text_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更多" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/MY_GREEN"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>