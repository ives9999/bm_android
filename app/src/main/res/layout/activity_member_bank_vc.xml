<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Controllers.MemberBankVC">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/MY_GREEN">

        <include layout="@layout/top_view" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topView"
        android:background="@color/MY_BLACK"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/search_linearlayout"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/bank_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bankTV"
                        style="@style/list_text_general"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12sp"
                        android:text="銀行名稱："
                        android:textAlignment="textEnd" />

                    <EditText
                        android:id="@+id/bankTF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="66dp"
                        android:layout_toEndOf="@id/bankTV"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:padding="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/MY_WHITE"
                        android:textColorHint="#8b8f90"
                        android:textSize="21dp" />


                    <ImageView
                        android:id="@+id/clear_bank"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="24dp"
                        android:tag="1"
                        app:srcCompat="@drawable/delete" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/branch_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/branchTV"
                        style="@style/list_text_general"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12sp"
                        android:text="分行名稱："
                        android:textAlignment="textEnd" />

                    <EditText
                        android:id="@+id/branchTF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="66dp"
                        android:layout_toEndOf="@id/branchTV"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:padding="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/MY_WHITE"
                        android:textColorHint="#8b8f90"
                        android:textSize="21dp" />


                    <ImageView
                        android:id="@+id/clear_branch"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="24dp"
                        android:tag="2"
                        app:srcCompat="@drawable/delete" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/bank_code_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bank_codeTV"
                        style="@style/list_text_general"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12sp"
                        android:text="銀行代碼："
                        android:textAlignment="textEnd" />

                    <EditText
                        android:id="@+id/bank_codeTF"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/bank_codeTV"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:inputType="number"
                        android:padding="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/MY_WHITE"
                        android:textColorHint="#8b8f90"
                        android:textSize="21dp" />


                    <ImageView
                        android:id="@+id/clear_bank_code"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="13dp"
                        android:tag="3"
                        app:srcCompat="@drawable/delete" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/account_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/accountTV"
                        style="@style/list_text_general"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12sp"
                        android:text="帳號："
                        android:textAlignment="textEnd" />

                    <EditText
                        android:id="@+id/accountTF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="66dp"
                        android:layout_toEndOf="@id/accountTV"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:inputType="number"
                        android:padding="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/MY_WHITE"
                        android:textColorHint="#8b8f90"
                        android:textSize="21dp" />


                    <ImageView
                        android:id="@+id/clear_account"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="24dp"
                        android:tag="4"
                        app:srcCompat="@drawable/delete" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/signupButton"
                    style="@style/submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="submitButtonPressed"
                    android:text="送出" />


                <Button
                    android:id="@+id/cancelButton"
                    style="@style/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:onClick="cancelButtonPressed"
                    android:text="取消"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/mask" />
</RelativeLayout>