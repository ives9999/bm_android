<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BLACK"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/menu_loginoutBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/power"
        android:drawablePadding="4dp"
        android:fontFamily="sans-serif"
        android:onClick="loginBtnPressed"
        android:padding="16dp"
        android:text="登入"
        android:textColor="@color/WHITE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_registerBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/register"
        android:drawablePadding="4dp"
        android:fontFamily="sans-serif"
        android:onClick="registerBtnPressed"
        android:padding="16dp"
        android:text="註冊"
        android:textColor="@color/WHITE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/menu_loginoutBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_forgetpasswordBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="4dp"
        android:fontFamily="sans-serif"
        android:onClick="forgetpasswordBtnPressed"
        android:padding="16dp"
        android:text="忘記密碼"
        android:textColor="@color/WHITE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>