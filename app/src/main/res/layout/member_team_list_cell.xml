<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/noTV"
            style="@style/list_text_general"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100."
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/featuredIV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/nophoto" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTV"
                style="@style/list_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="xxx羽球隊" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cityBtn"
                    style="@style/city_button"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/arenaBtn"
                    style="@style/city_button"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/weekdayTV"
                style="@style/list_text_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="星期二" />

            <TextView
                android:id="@+id/intervalTV"
                style="@style/list_text_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="10:00 ~ 12:00" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加入時間：" />

                <TextView
                    android:id="@+id/joinTimeTV"
                    style="@style/highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2022-11-30 10:05" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deleteIV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <include
            android:id="@+id/include"
            layout="@layout/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>