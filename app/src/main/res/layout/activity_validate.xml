<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/validate_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusableInTouchMode="true"
    tools:context=".Controllers.ValidateVC">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/MY_GREEN">

        <include layout="@layout/top_view" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topView"
        android:layout_marginTop="24dp"
        android:id="@+id/data_container"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/typeLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="email"
            android:textAlignment="center"
            android:textColor="@color/MY_WHITE"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/typeTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edittext_border"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAlignment="textEnd"
            android:textColor="@color/MY_WHITE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_container"
        android:id="@+id/code_container"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="認證碼"
            android:textAlignment="center"
            android:textColor="@color/MY_WHITE"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/codeTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edittext_border"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:inputType="textPersonName"
            android:textAlignment="textEnd"
            android:textColor="@color/MY_WHITE" />
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_below="@id/code_container"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_rc"
        android:onClick="submit"
        android:text="提交"
        android:textColor="@color/MY_WHITE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/codeTxt" />

    <Button
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/submit"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_rc"
        android:onClick="resend"
        android:text="重新寄發認證碼"
        android:textColor="@color/MY_WHITE"
        android:textSize="18sp"
        android:textStyle="bold" />
    <include layout="@layout/mask" />

</RelativeLayout>