<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/featrued_container"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:id="@+id/listFeatured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/loading_square_120"
                        android:scaleType="fitCenter"
                        tools:srcCompat="@drawable/loading_square_120" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/titleTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="7"
                                android:textColor="@color/WHITE"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@+id/listFeatured"
                                app:layout_constraintTop_toTopOf="@+id/listFeatured"
                                tools:text="球隊" />

                            <Button
                                android:id="@+id/cityBtn"
                                style="@style/city_button"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_weight="3" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/telTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:layout_weight="5"
                                android:textColor="@color/MY_GREEN"
                                android:textSize="18dp"
                                tools:text="市內電話" />

                            <TextView
                                android:id="@+id/business_timeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textColor="@color/MY_GREEN"
                                android:textSize="18dp"
                                tools:text="營業時間" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/addressTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:textColor="@color/MY_GREEN"
                                android:textSize="18dp"
                                tools:text="住址" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/iconView"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/mapIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/map" />

                    <ImageButton
                        android:id="@+id/telIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/tel" />

                    <ImageButton
                        android:id="@+id/mobileIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/mobile" />

                    <ImageButton
                        android:id="@+id/refreshIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/refresh" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/editIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/edit1" />

                    <ImageButton
                        android:id="@+id/deleteIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/delete" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/greater_container"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="greater"
                app:srcCompat="@drawable/greater1" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <include
            android:id="@+id/include"
            layout="@layout/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
