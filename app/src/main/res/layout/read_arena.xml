<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/MY_BLACK"
    >

    <com.sportpassword.bm.Views.RoundedCorner
        style="@style/city_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@color/bg_gray_900"
        android:orientation="vertical"
        android:padding="12dp"
        app:radius="8"
    >

        <ImageView
            android:id="@+id/featuredIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cityNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="xxx"
                android:textColor="@color/bg_300"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/pvTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="xxx"
                    android:textColor="@color/bg_300"
                    android:textSize="16dp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="xxx羽球隊"
            android:textColor="@color/Primary_300"
            android:textSize="24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/avatarIV"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                tools:srcCompat="@drawable/ic_noavatar_svg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/memberNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/bg_300"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/createdATTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/bg_300"
                    android:textSize="16dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="更多..."
                android:textColor="@color/bg_300"
                android:textSize="16dp" />

        </RelativeLayout>

    </com.sportpassword.bm.Views.RoundedCorner>
</LinearLayout>