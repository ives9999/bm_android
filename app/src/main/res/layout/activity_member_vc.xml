<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MY_BLACK"
    android:id="@+id/allLayout"
    tools:context=".Controllers.MemberVC">

    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/featuredContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.sportpassword.bm.Views.IconView2
                android:id="@+id/qrcodeIV2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                app:iconView2Icon="ic_qrcode_svg"
                 />

            <ImageView
                android:id="@+id/avatarIV"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/ic_noavatar_svg" />

            <com.sportpassword.bm.Views.IconView2
                android:id="@+id/logoutIV2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                app:iconView2Icon="ic_logout_svg"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/nameTV"
                style="@style/list_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ives" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/levelContainer"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/member_level"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/levelLeftContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="200"
                android:orientation="horizontal">

                <com.sportpassword.bm.Views.IconWithBGCircle
                    android:id="@+id/pointIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="24dp"
                    android:layout_gravity="center_vertical"
                    app:iconWithBGCircleFrameWidth="48"
                    app:iconWithBGCircleIconWidth="24"
                    app:iconWithBGCircleIcon="ic_point_svg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pointTextTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_16_bold_white"
                        android:text="600點" />
                    <TextView
                        android:id="@+id/pointDescTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="@style/text_12_white99"
                        android:text="會員點數" />

                </LinearLayout>

<!--                <com.sportpassword.bm.Views.IconTextVertical2-->
<!--                    android:id="@+id/pointIconText"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:IconTextVertical2Icon="ic_point_svg"-->
<!--                    app:IconTextVertical2Text=""-->
<!--                    />-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@color/TEXT_WHITE33" />

            <LinearLayout
                android:id="@+id/levelRightContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="200"
                android:orientation="horizontal">

                <com.sportpassword.bm.Views.IconWithBGCircle
                    android:id="@+id/subscriptionIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="24dp"
                    android:layout_gravity="center_vertical"
                    app:iconWithBGCircleFrameWidth="48"
                    app:iconWithBGCircleIconWidth="24"
                    app:iconWithBGCircleIcon="ic_subscription_basic" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subscriptionTextTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_16_bold_white"
                        android:text="基本會員" />
                    <TextView
                        android:id="@+id/subscriptionDescTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="@style/text_12_white99"
                        android:text="會員訂閱" />

                </LinearLayout>

<!--                <com.sportpassword.bm.Views.IconTextVertical2-->
<!--                    android:id="@+id/subscriptionIconText"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:IconTextVertical2Icon="ic_subscription_steal"-->
<!--                    app:IconTextVertical2Text=""-->
<!--                    />-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topContainer"
        android:layout_above="@id/bottomView"
        android:layout_marginTop="3dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="0dp">

        <include layout="@layout/bottom_view" />

    </LinearLayout>

</RelativeLayout>