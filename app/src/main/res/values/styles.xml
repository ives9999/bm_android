<resources>

    <!-- Base application theme. -->
    <style name="Splash" parent="@style/Theme.AppCompat.DayNight">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/MyActionBarButtonStyle</item>
        <item name="actionButtonStyle">@style/MyActionBarButtonStyle</item>

        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorHint">@color/MY_WHITE</item>
        <item name="android:actionButtonStyle">@style/MyActionBarButtonStyle</item>
        <item name="actionButtonStyle">@style/MyActionBarButtonStyle</item>-->
    </style>

    <style name="MyActionBarButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dip</item>
        <item name="android:maxWidth">80dip</item>
        <item name="android:width">60dip</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/MyActionBarButtonStyle</item>
        <item name="actionButtonStyle">@style/MyActionBarButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation_2</item>
        <item name="android:windowBackground">@color/MY_GREEN</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/MY_WHITE</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/MY_GREY</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/MY_WHITE</item>
    </style>

    <style name="submit_button">
        <item name="android:background">@drawable/button_rc</item>
        <item name="android:textColor">@color/MY_WHITE</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="cancel_button">
        <item name="android:background">@drawable/button_rc_gray</item>
        <item name="android:textColor">@color/MY_WHITE</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="delete_button">
        <item name="android:background">@drawable/button_rc_purple</item>
        <item name="android:textColor">@color/MY_WHITE</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="clear_button">
        <item name="android:background">@drawable/button_rc_purple</item>
        <item name="android:textColor">@color/MY_WHITE</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="city_button">
        <item name="android:background">@drawable/button_city</item>
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="like_button">
        <item name="android:background">@drawable/button_like</item>
        <item name="android:textColor">@color/MY_WHITE</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="list_text_title">
        <item name="android:textColor">@color/MY_WHITE</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_text_general">
        <item name="android:textColor">@color/TEXTGRAY</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="highlight">
        <item name="android:textColor">@color/MY_WEIGHT_RED</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>
